<div class="inner-content-wrapper">
	<div class="main-content">
		<div class="container wrapper">
			<h1><i class="fa fa-comments"></i> Chatlog <small>{{{userData.urlChannel}}}</small></h1>
			<p>Below is a list of your channel's chatlog!</p>
			<div class="chat-search">
				<label for="chat-date"><span>Jump to date: <i class="fa fa-calendar"></i></span><input type="date" name="chat-date" id="chat-date" /></label>
			</div>
			<div class="chatlog-box">{{{formattedChatlog}}}</div>
		</div>
	</div>
</div>
<script>
$(document).ready(function() {
	let tempDate;
    $('#chat-date').val(new Date().toDateInputValue());
    $('.chatlog-box .date').each(function(index, el) {
		tempDate = new Date($(this).text());
		$(this).text(tempDate.toLocaleString());
	});
});
$('#chat-date').change(async function(e) {
	showLoader($('.chatlog-box'));
	let chatlogs = await loadFormattedChatlogs($('.urlChannel').text(), ($(this).val()));
	$('.chatlog-box').html(chatlogs);
	$('.chatlog-box .date').each(function(index, el) {
		tempDate = new Date($(this).text());
		$(this).text(tempDate.toLocaleString());
	});
});
</script>